<?xml version="1.0" encoding="utf-8"?>


<resources>
    <style name="Theme.Gamelender" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_gamelender</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Gamelender</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Gamelender</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Gamelender</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Gamelender</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Gamelender</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_gamelender</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_gamelender</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Gamelender</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
    </style>

    <style name="ActionBar.Solid.Gamelender" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_gamelender</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_gamelender</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_gamelender</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Gamelender</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.GameLender.TitleTextStyle</item>
    </style>
    
    <style name="ActionBar.Solid.GameLender.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/background_green</item>
    </style>

    <style name="ActionBar.Transparent.Gamelender" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_gamelender</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Gamelender</item>
    </style>

    <style name="PopupMenu.Gamelender" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_gamelender</item>
    </style>

    <style name="DropDownListView.Gamelender" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_gamelender</item>
    </style>

    <style name="ActionBarTabStyle.Gamelender" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_gamelender</item>
    </style>

    <style name="DropDownNav.Gamelender" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_gamelender</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_gamelender</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_gamelender</item>
    </style>

    <style name="ProgressBar.Gamelender" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_gamelender</item>
    </style>

    <style name="ActionButton.CloseMode.Gamelender" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_gamelender</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Gamelender.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Gamelender</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Gamelender</item>
    </style>

    
    <!-- ****************AUTH STYLES FOR LOGIN AND SIGNUP********************** -->
    
    <style name="AuthBackground">
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="AuthBackgroundImage">
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:src">@drawable/fullbackground</item>
    </style>

    <style name="AuthTitle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="AuthFieldContainer">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/login_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/login_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/login_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/login_vertical_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/logoText</item>
    </style>

    <style name="AuthEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AuthButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>